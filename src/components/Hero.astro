            <span>
                <!-- icono -->
                {city}, {region}
            </span>
            <footer>
                {
                    email && (
                        <a
                            href={'mailto:{email}'}
                            title={'Enviar un correo electrÃ³nico a ${name} al correo ${email}'}
                            target="_blank"
